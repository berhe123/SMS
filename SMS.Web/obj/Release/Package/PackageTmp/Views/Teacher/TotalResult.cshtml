@{
    ViewBag.Title = "Total Result";
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}
@section scripts{
    <script src="~/Scripts/Views/AssignmentResult/AssignmentResult_Total.js" type="text/javascript"></script>
}

<input id="mnu-active" type="hidden" value="mnuAssignmentScheduleNew" />
<section class="dashboard-counts no-padding-bottom">
    <div class="container-fluid">
        <div class="row-fluid bg-white has-shadow">
            <!-- Item -->
            <div class="span2 text-center">
                <a href="~/AssignmentSchedule/New" style="text-decoration:none;" class="mnuAssignmentScheduleNew">
                    <div class="row-fluid item d-flex align-items-center">
                        <div style="margin-left:20px;">
                            <div class="span4 icon bg-gray"><i class="icon-form"></i></div>
                            <div class="span3 title">Assignment</div>
                        </div>
                    </div>
                </a>
            </div>
            <div class="span2 text-center">
                <a href="~/GroupWorkSchedule/New" style="text-decoration:none;" class="mnuGroupWorkScheduleNew">
                    <div class="row-fluid item d-flex align-items-center">
                        <div class="span4 icon bg-gray"><i class="icon-form"></i></div>
                        <div class="span4 title">Group Work</div>
                    </div>
                </a>
            </div>
            <div class="span2 text-center">
                <a href="~/QuizSchedule/New" style="text-decoration:none;" class="mnuQuizScheduleNew">
                    <div class="row-fluid item d-flex align-items-center">
                        <div class="span4 icon bg-gray"><i class="icon-form"></i></div>
                        <div class="span3 title">Quiz</div>
                    </div>
                </a>
            </div>
            <div class="span2 text-center">
                <a href="~/TestSchedule/New" style="text-decoration:none;" class="mnuTestScheduleNew">
                    <div class="row-fluid item d-flex align-items-center">
                        <div class="span4 icon bg-gray"><i class="icon-form"></i></div>
                        <div class="span3 title">Test</div>
                    </div>
                </a>
            </div>
            <div class="span2 text-center">
                <a href="~/ExerciseBookResult/New" style="text-decoration:none;" class="mnuExerciseBookResultNew">
                    <div class="row-fluid item d-flex align-items-center">
                        <div class="span4 icon bg-gray"><i class="icon-form"></i></div>
                        <div class="span4 title">Exercise Book</div>
                    </div>
                </a>
            </div>
            <div class="span2 text-center">
                <a href="~/Teacher/TotalResult" style="text-decoration:none;" class="mnuTotalResultNew">
                    <div class="row-fluid item d-flex align-items-center">
                        <div class="span4 icon bg-orange"><i class="icon-form"></i></div>
                        <div class="span4 title">Total Result</div>
                    </div>
                </a>
            </div>
        </div>
    </div>
</section>
<br />
<div class="client card">
    <div class="row-fluid bg-light has-shadow">
        <div class="span12">
            <div class="card">
                <ul class="nav nav-tabs">
                    <li class="active"><a href="~/AssignmentSchedule/New" style="text-decoration:none;">Assignment</a></li>
                    <li><a href="~/AssignmentSchedule/New" style="text-decoration:none;">Group Work</a></li>
                    <li><a href="~/AssignmentSchedule/New" style="text-decoration:none;">Quiz</a></li>
                    <li><a href="~/AssignmentSchedule/New" style="text-decoration:none;">Test</a></li>
                    <li><a href="~/AssignmentSchedule/New" style="text-decoration:none;">Exercise Book</a></li>
                    <li style="float:right;"><a href="~/Teacher/TeacherIndex" style="text-decoration:none;">Home</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="row-fluid bg-light has-shadow" style="text-align:center;">
        <h2 class="no-margin-bottom" style="display: inline; font-weight:normal; float:left;">Total Assignment Result</h2>
    </div>
    <br />
    <div class="row-fluid">
        <div class="chart span12">
            <div class="row-fluid">
                <div class="span6">
                    <div class="row-fluid" style="margin-bottom:10px; margin-left:10px;">
                        @Html.Partial("TotalAssignmentResultForm")
                        <br />
                        <button id="btnShowStudents" class="btn btn-secondary">Show Students</button>
                    </div>
                </div>
                <div class="span6">
                    <table class="table table-bordered table-striped table-condensed" id="tblAssignment">
                        <thead>
                            <tr>
                                <th style="width:10%"> Add </th>
                                <th style="width:60%"> Assignment </th>
                                <th style="width:30%"> OutOf </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td colspan="2" class="dataTables_empty">
                                    Loading data from server
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span6">
                    <table class="table table-bordered table-striped table-condensed" id="tblassignmentresult">
                        <thead>
                            <tr>
                                <th style="width:0%" class="hidden"> TableRowGuid </th>
                                <th style="width:50%"> Student Name </th>
                                <th style="width:30%"> Assignment </th>                                
                                <th style="width:10%"> Result </th>
                                <th style="width:10%"> OutOf </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td colspan="2" class="dataTables_empty">
                                    Loading data from server
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="span6">
                    <table class="table table-bordered table-striped table-condensed" id="tbltotalassignmentresult">
                        <thead>
                            <tr>
                                <th style="width:0%" class="hidden"> TableRowGuid </th>
                                <th style="width:60%"> Student Name </th>
                                <th style="width:20%"> Total </th>
                                <th style="width:20%"> OutOf </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td colspan="2" class="dataTables_empty">
                                    Loading data from server
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="row-fluid" style="margin-left: 10px; margin-bottom: 3px;">
                <div class="span4">
                    <button id="btnSave" class="btn btn-primary">Save</button>
                    <button id="btnSum" class="btn btn-secondary">Sum</button>
                    <button id="btnConvert" class="btn btn-secondary">Convert</button>                   
                </div>
            </div>
        </div>
    </div>
</div>
