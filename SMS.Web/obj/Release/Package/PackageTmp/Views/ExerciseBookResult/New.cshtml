@{
    ViewBag.Title = "New Exercise Book Result";
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}
@section scripts{
    <script src="~/Scripts/Views/ExerciseBookResult/ExerciseBookResult_New3.js" type="text/javascript"></script>
}
<section class="dashboard-counts no-padding-bottom">
    <div class="container-fluid">
        <div class="row-fluid bg-white has-shadow">
            <!-- Item -->
            <div class="span2 text-center">
                <a href="~/AssignmentSchedule/New" style="text-decoration:none;" class="mnuAssignmentScheduleNew">
                    <div class="row-fluid item d-flex align-items-center">
                        <div style="margin-left:20px;">
                            <div class="span4 icon bg-gray"><i class="icon-form"></i></div>
                            <div class="span3 title">Assignment</div>
                        </div>
                    </div>
                </a>
            </div>
            <div class="span3 text-center">
                <a href="~/GroupName/New" style="text-decoration:none;" class="mnuGroupNameNew">
                    <div class="row-fluid item d-flex align-items-center">
                        <div class="span4 icon bg-gray"><i class="icon-form"></i></div>
                        <div class="span4 title">Group Work</div>
                    </div>
                </a>
            </div>
            <div class="span2 text-center">
                <a href="~/QuizSchedule/New" style="text-decoration:none;" class="mnuQuizScheduleNew">
                    <div class="row-fluid item d-flex align-items-center">
                        <div class="span4 icon bg-gray"><i class="icon-form"></i></div>
                        <div class="span3 title">Quiz</div>
                    </div>
                </a>
            </div>
            <div class="span3 text-center">
                <a href="~/TestSchedule/New" style="text-decoration:none;" class="mnuTestScheduleNew">
                    <div class="row-fluid item d-flex align-items-center">
                        <div class="span4 icon bg-gray"><i class="icon-form"></i></div>
                        <div class="span3 title">Test</div>
                    </div>
                </a>
            </div>
            <div class="span2 text-center">
                <a href="~/ExerciseBookResult/New" style="text-decoration:none;" class="mnuExerciseBookResultNew">
                    <div class="row-fluid item d-flex align-items-center">
                        <div class="span4 icon bg-orange"><i class="icon-form"></i></div>
                        <div class="span4 title">Exercise Book</div>
                    </div>
                </a>
            </div>
        </div>
    </div>
</section>
<br />
<div class="client card">
    <div class="row-fluid bg-light has-shadow">
        <div class="span12">
            <div class="card">
                <ul class="nav nav-tabs">
                    <li class="active"><a href="~/ExerciseBookResult/New" style="text-decoration:none;">New</a></li>
                    <li><a href="~/ExerciseBookResult/List" style="text-decoration:none;">Manage</a></li>
                    <li style="float:right;"><a href="~/Teacher/TeacherIndex" style="text-decoration:none;">Home</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="row-fluid bg-light has-shadow" style="text-align:center;">
        <h2 class="no-margin-bottom" style="display: inline; float:left; font-weight:normal;">New Exercise Book</h2>
    </div>
    <br />
    <div class="row-fluid" style="padding-left:10px;">
        <div class="span8">
            @Helpers.Select("ClassRoom", "Class Room", "ClassRooms()", "classroomGuid", 52)
            @Helpers.Select("Subject", "Subject", "Subjects()", "SubjectTeacherClassRoomGuid", "disabled", 52)
            @Helpers.Input("Out Of", "OutOf", "required digits", "text", 50)
            <br />
            <button id="btnShowStudents" class="btn btn-secondary">Show Students</button>
        </div>
    </div>
    <br />
    <div class="row-fluid">
        <div class="span11" style="padding-left:10px;">
            <table class="table table-bordered table-striped table-condensed" id="tblStudent">
                <thead>
                    <tr>
                        <th style="width:0%" class="hidden"> TableRowGuid </th>
                        <th style="width:45%"> Student Name </th>
                        <th style="width:15%"> Result </th>
                        <th style="width:40%"> Comment </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td colspan="2" class="dataTables_empty">
                            Loading data from server
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="span1"></div>
        </div>
    <div class="row-fluid" style="padding-left:10px;">
        <div class="span8" style="margin-bottom:5px; margin-right:5px;">
            <button id="btnSaveResult" class="btn btn-primary">Save Result</button>
        </div>
    </div>
</div>
