@{
    ViewBag.Title = "Home";
}
@section scripts{
    <script src="~/plugins/MetroJs/MetroJs.min.js" type="text/javascript"></script>
    <script src="~/Scripts/Views/Home_Index.js" type="text/javascript"></script>
}
<link href="~/plugins/MetroJs/MetroJs.min.css" rel="stylesheet" type="text/css" />

<div class="container-fluid">
    <ul class="breadcrumb">
        <li>You are here: <a href="~/Home/Index" class="glyphicons home"><i></i>Home</a></li>
    </ul>
    <div class="separator bottom">
    </div>
    <div class="innerLR">
        <div class="widget">
            <div class="widget-head">
                <h4 class="heading glyphicons cardio">
                    <i></i>Home</h4>
            </div>
            <div class="widget-body">
                @*<div class="row-fluid" style="padding-left:35px;padding-top:35px;">
                    <div class="span12">
                        <div class="span2 pull-left" style="text-align: left; height: 90px; width: 90px; background-image: url(@System.Configuration.ConfigurationManager.AppSettings["LogoImagePath"])"> <!--../Images/logo.png-->
                        </div>
                        <div class="span10 pull-left">
                            <span style="font-size:xx-large;"><strong>@System.Configuration.ConfigurationManager.AppSettings["OrganizationNameAm"]</strong></span><br /><br />
                            <span style="font-size:xx-large;"><strong>@System.Configuration.ConfigurationManager.AppSettings["OrganizationName"]</strong></span>
                        </div>
                    </div>
                </div>*@
                <div class="row-fluid">
                    <div class="span12">
                        @*<br /><br />
                        <div>Welcome to @System.Configuration.ConfigurationManager.AppSettings["OrganizationName"]</div>*@
                        <!-- Apply blue theme as default for all tiles, but use the tiles class to allow the theme to be swapped -->
                        <div class="tiles blue tile-group" style="background: white;"> <!-- four-wide --><!-- lightgrey -->
                            <div class="live-tile accent red exclude" id="divShowItemsBelowReorderLevel">
                                @*<a class="tile-title link" id="btnShowItemsBelowReorderLevel">show list</a>*@
                                @*<p>There are @SMS.Business.Service.NotificationSvc.GetNumberOfItemsWithQuantityOnHandBelowReorderLevel().ToString() items with their quantity on hand below the reoder level</p>*@
                            </div>
                            <div class="live-tile accent yellow exclude" id="divShowSMSOrdersNotYetReceived">
                                @*<span class="tile-title">show list</span>*@
                                @*<p>There are @SMS.Business.Service.NotificationSvc.GetNumberOfSMSOrdersNotYetReceived(nonintanon.Security.WebSecurity.GetUserId(User.Identity.Name)).ToString() SMS orders that are not yet received</p>*@
                            </div>
                            <div class="live-tile accent yellow exclude" id="divShowRawMaterialRequestsNotYetIssued">
                                @*<span class="tile-title">show list</span>*@
                                @*<p>There are @SMS.Business.Service.NotificationSvc.GetNumberOfRawMaterialRequestsNotYetIssued(nonintanon.Security.WebSecurity.GetUserId(User.Identity.Name)).ToString() raw material requests that are not yet issued</p>*@
                            </div>
                            <div class="live-tile accent yellow exclude" id="divShowPurchaseOrdersNotYetReceived">
                               @* <span class="tile-title">show list</span>*@
                               @* <p>There are @SMS.Business.Service.NotificationSvc.GetNumberOfPurchaseOrdersNotYetReceived(nonintanon.Security.WebSecurity.GetUserId(User.Identity.Name)).ToString() purchase orders that are not yet received</p>*@
                            </div>
                            <div class="live-tile accent lightblue exclude" id="divShowSalesOrdersNotYetInvoiced">
                                @*<span class="tile-title">show list</span>*@
                               @* <p>There are @SMS.Business.Service.NotificationSvc.GetNumberOfSalesOrdersNotYetInvoiced(nonintanon.Security.WebSecurity.GetUserId(User.Identity.Name)).ToString() sales orders that have not yet been invoiced</p>*@
                            </div>
                            <div class="live-tile accent red exclude" id="divShowSalesInvoicesNotYetIssued">
                                @*<span class="tile-title">show list</span>*@
                               @* <p>There are @SMS.Business.Service.NotificationSvc.GetNumberOfSalesInvoicesNotYetIssued(nonintanon.Security.WebSecurity.GetUserId(User.Identity.Name)).ToString() sales invoices that have not yet been issued</p>*@
                            </div>
                            <div class="live-tile accent red exclude" id="divShowCreditInvoicesNotYetSettled">
                                @*<span class="tile-title">show list</span>*@
                               @* <p>There are @SMS.Business.Service.NotificationSvc.GetNumberOfCreditInvoicesNotYetSettled(nonintanon.Security.WebSecurity.GetUserId(User.Identity.Name)).ToString() sales invoices that have passed their due date</p>*@
                            </div>
                            <div class="live-tile accent lightblue exclude" id="divShowNumberOfDamagedGood">
                                @*<span class="tile-title">show list</span>*@
                               @* <p>There are @SMS.Business.Service.NotificationSvc.GetNumberOfDamagedGoods(nonintanon.Security.WebSecurity.GetUserId(User.Identity.Name)).ToString() damaged items in the past month in your store(s)</p>*@
                            </div>
                            <div class="live-tile accent lightblue exclude" id="divShowNumberOfLostGood">
                                @*<span class="tile-title">show list</span>*@
                                @*<p>You have lost @SMS.Business.Service.NotificationSvc.GetNumberOfLostGoods(nonintanon.Security.WebSecurity.GetUserId(User.Identity.Name)).ToString() items in the past month from your store(s)</p>*@
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
